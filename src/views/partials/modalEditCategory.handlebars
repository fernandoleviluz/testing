<div class="modal fade modalEditCategory" id="modalEditCategory" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title editCategoryTitle">Editar categoria</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="categoryName">Nome</label>
                        <input type="text" class="form-control editCategoryName" id="editCategoryName"
                            placeholder="Nome da categoria">
                    </div>

                    <div class="form-group">
                        <label for="categoryDescription">Descrição</label>
                        <textarea class="form-control editCategoryDescription" id="editCategoryDescription"
                            placeholder="Descrição da categoria"></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="categorySlug">Slug</label>
                            <input type="text" class="form-control editCategorySlug" id="editCategorySlug"
                                placeholder="Informe um slug">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="categoryParent">Pai</label>

                            <select id="editCategoryParent" class="form-control editCategoryParent">
                                <option value="" selected>Selecione...</option>
                                {{#each categories}}
                                <option value="{{id}}">{{name}}</option>
                                {{else}}
                                {{/each}}

                            </select>
                            <small>Caso seja uma categoria filha, selecione um pai</small>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btnEditCategory" data-dismiss="modal">Salvar</button>
                </form>
                <!-- Form // -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>