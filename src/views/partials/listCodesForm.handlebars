<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0 headerListItem">
                <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                    data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Itens do produto <span class="badge badge-primary ml-3">{{codeLength}}</span>
                    <button type="button" class="btn btn-danger btn-sm btnCleamListProduct">Limpar</button>
                </button>
            </h2>
        </div>

        <div id="collapseOne" class="collapse colapseCodes" aria-labelledby="headingOne"
            data-parent="#accordionExample">
            <div class="card-body">
                <div class="row listItensProduct">
                    {{#each product.items}}
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="card-header">
                                {{name}}
                                <button type="button" class="float-right raiz btn btn-danger btn-sm"
                                    data-code="{{code.code}}" data-id="{{code.id}}"><i
                                        class="fas fa-trash-alt"></i></button>
                            </div>
                            <div class="card-body">
                                {{code.code}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>