<div class="col-xl-8">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Edit profile </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="#!" class="btn btn-sm btn-primary">Settings</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form class="formEditUser" action="" name="formEditUser">
                <h6 class="heading-small text-muted mb-4">Informações do usuário</h6>
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-username">Nome Completo</label>
                                <input type="text" id="input-username" class="form-control" placeholder="{{user.name}}"
                                    value="{{user.name}}" autocomplete="fullname" disabled>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-email">Endereço de Email</label>
                                <input type="email" id="input-email" class="form-control" value="{{user.email}}"
                                    placeholder="{{user.email}}" autocomplete="username" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-first-name">Senha Antiga</label>
                                <input type="password" id="input-current-password" class="form-control"
                                    placeholder="Informe a senha antiga" autocomplete="current-password" disabled>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-last-name">Nova senha</label>
                                <input type="password" id="input-new-password" class="form-control"
                                    placeholder="Informe uma nova senha" autocomplete="new-password" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="my-4">
                <!-- Address -->
                <h6 class="heading-small text-muted mb-4">Informações de contato</h6>
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label" for="input-address">Endereço</label>
                                <input id="input-address" class="form-control" placeholder="Home Address"
                                    value="{{user.address}}" type="text" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" for="input-city">Cidade</label>
                                <input type="text" id="input-city" class="form-control" placeholder="City"
                                    value="{{user.city}}" disabled>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" for="input-country">Telefone</label>
                                <input type="text" id="input-phone" class="form-control" placeholder="Country"
                                    value="{{user.phone}}" disabled>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label" for="input-country">Celular</label>
                                <input type="text" id="input-cell" class="form-control" value="{{user.cell}}" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="my-4">
                <!-- Description -->
                <h6 class="heading-small text-muted mb-4">Sobre</h6>
                <div class="pl-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Sobre mim</label>
                        <textarea rows="4" class="form-control" id="textarea-about"
                            placeholder="A few words about you ..." disabled>{{user.about}}</textarea>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>