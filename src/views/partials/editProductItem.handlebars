<div class="col-12 px-0 mb-3">
    Informe informações sobre os itens pertencentes ao produto e o os códigos do produto neste formulário
</div>

<hr>
<form class="form-edit-product-codes">
    <label class="sr-only" for="productItemName">Prefixo</label>
    <div class="input-group mb-4 mr-sm-2">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <i class="fas fa-ad"></i>
            </div>
        </div>
        <input type="text" class="form-control productItemName" id="productItemName"
            placeholder="Informe um prefixo para os itens do produto">
    </div>

    <label class="sr-only" for="productCode">Código</label>
    <div class="input-group mb-4 mr-sm-2 singleCode">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <i class="fas fa-file-contract"></i>
            </div>
        </div>
        <input type="text" class="form-control productCode" id="productCode" placeholder="Informe o código do produto">
    </div>

    <div class="form-group custom-file-wrapper">
        <div class="custom-file">
            <input type="file" class="custom-file-input fileToRead" id="customFile">
            <label class="custom-file-label" for="customFile">Arquivo TXT</label>
        </div>
    </div>

    <!-- sitches -->
    <div class="form-group">
        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input multCodes" id="customSwitch1">
            <label class="custom-control-label" for="customSwitch1">Selecionar arquivo com multiplos códigos</label>
        </div>
    </div>

    <hr>

    <button type="submit" class="btn btn-primary mb-2">Inserir</button>
</form>

<hr>
{{>listCodesForm}}