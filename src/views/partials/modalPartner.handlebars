<!-- Modal -->
<div class="modal fade modalPartner" id="modalPartner" tabindex="-1" role="dialog" aria-labelledby="modalPartner"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cadastro de parceiro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card shadow mb-4 border-bottom-primary">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Preencha o formulário abaixo</h6>
                    </div>
                    <div class="card-body">
                        <form class="partnerForm needs-validation" novalidate>
                            <div class="form-group">
                                <label for="partnerTitle">Titulo</label>
                                <input type="text" class="form-control partnerTitle" id="partnerTitle"
                                    placeholder="Titulo / Nome do parceiro" required>
                                {{>validate}}
                            </div>

                            <div class="form-group">
                                <label for="partnerCompany">Empresa</label>
                                <input type="text" class="form-control partnerCompany" id="partnerCompany"
                                    placeholder="Nome da empresa" required>
                                {{>validate}}
                            </div>



                            <div class="form-group">
                                <label for="partnerContent">Descrição / Informações</label>
                                <textarea class="form-control partnerContent" id="partnerContent" rows="3"
                                    placeholder="Descrição / Informações" required></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </form>

                        <hr>

                        <div class="row imagePartner">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>